{
  "configurations": [
    {
      "command": "npm run dev",
      "name": "Debug Client",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/packages/client"
    },
    {
      "type": "node",
      "name": "Debug Server",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "console": "integratedTerminal"
    }
  ]
}
